<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#002302"
    tools:context=".CharacterMenu">

    <Button
        android:id="@+id/wolfBttn"
        android:layout_width="142dp"
        android:layout_height="107dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="162dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/elfBttn"
        android:layout_width="164dp"
        android:layout_height="182dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="256dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wolfBttn"
        app:layout_constraintVertical_bias="0.139" />

    <Button
        android:id="@+id/humanBttn"
        android:layout_width="176dp"
        android:layout_height="185dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="163dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/elfChar"
        app:layout_constraintVertical_bias="0.547" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/wolfChar"
        android:layout_width="136dp"
        android:layout_height="99dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="137dp"
        android:background="@drawable/wolf"
        android:src="@drawable/wolf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/humanChar"
        android:layout_width="173dp"
        android:layout_height="193dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="428dp"
        android:layout_marginEnd="137dp"
        android:background="@drawable/human"
        android:src="@drawable/human"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/elfChar"
        android:layout_width="162dp"
        android:layout_height="168dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="137dp"
        android:background="@drawable/elf"
        android:src="@drawable/elf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wolfTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="93dp"
        android:text="Wolf"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/wolfBttn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/elfTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elf"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="266dp"
        tools:layout_editor_absoluteY="305dp" />

    <TextView
        android:id="@+id/humanTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Human"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="266dp"
        tools:layout_editor_absoluteY="511dp" />

</androidx.constraintlayout.widget.ConstraintLayout>