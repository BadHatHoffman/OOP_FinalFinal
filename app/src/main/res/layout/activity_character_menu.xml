<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/character_background"
    tools:context=".CharacterMenu">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/wolfChar"
        android:layout_width="186dp"
        android:layout_height="135dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/wolf"
        android:src="@drawable/wolf"
        app:layout_constraintBottom_toTopOf="@+id/elfChar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/elfChar"
        android:layout_width="181dp"
        android:layout_height="183dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/elf"
        android:src="@drawable/elf"
        app:layout_constraintBottom_toTopOf="@+id/humanChar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/humanChar"
        android:layout_width="211dp"
        android:layout_height="209dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/human"
        android:src="@drawable/human"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/wolfBttn"
        android:layout_width="188dp"
        android:layout_height="139dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="162dp"
        android:background="#00FFFFFF"
        android:onClick="wolfClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/elfBttn"
        android:layout_width="177dp"
        android:layout_height="183dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="159dp"
        android:background="#00FFFFFF"
        android:onClick="elfClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wolfChar" />

    <Button
        android:id="@+id/humanBttn"
        android:layout_width="206dp"
        android:layout_height="213dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:onClick="humanClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/elfChar" />


    <TextView
        android:id="@+id/wolfTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#BE000000"
        android:text="Wolf"
        android:textColor="#EFE9E9"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.726"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.248" />

    <TextView
        android:id="@+id/elfTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#BE000000"
        android:text="Elf"
        android:textColor="#E8E8E8"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.707"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/humanTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Human"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.753"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.834" />

    <TextView
        android:id="@+id/characterTitle"
        android:layout_width="404dp"
        android:layout_height="71dp"
        android:background="#B5000000"
        android:text="Choose A Character"
        android:textAlignment="center"
        android:textColor="#FFFEFE"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>